# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = sp2ace
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 80

[*.rb]
indent_size = 2

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
